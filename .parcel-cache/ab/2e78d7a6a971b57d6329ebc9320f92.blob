#list-container {
  margin: 0 auto;
  width: 50%;
  display: flex;
  flex-flow: column nowrap;
  font-size: 15pt;
  font-family: Verdana, Geneva, Tahoma, sans-serif;
}
.item-container {
  margin-top: 10px;
  padding: 10px 30px 10px 30px;
  border-radius: 20px;
}
.item-container:hover {
  background-color: rgb(240, 240, 240);
}
.item-content {
  display: inline;
}

.item-button {
  float: right;
  height: 10px;
  width: 10px;
  border: none;
  background-color: transparent;
}
.item-button:before {
  content: "\00d7";
  color: #bbb;
  font-weight: 300;
  font-family: Arial, sans-serif;
  font-size: 15pt;
}
.item-button:hover:before {
  color: rgba(51, 51, 51);
}

#list-container {
  margin: 0 auto;
  width: 50%;
  display: flex;
  flex-flow: column nowrap;
}
.item-content {
  display: inline;
}

.item-button {
  float: right;
  height: 10px;
  width: 10px;
  border: none;
  background-color: transparent;
}
.item-button:before {
  content: "\00d7";
  color: #bbb;
  font-weight: 300;
  font-family: Arial, sans-serif;
}
.item-button:before:hover {
  color: rgba(51, 51, 51);
}

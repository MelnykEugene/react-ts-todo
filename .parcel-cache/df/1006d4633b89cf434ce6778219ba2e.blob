.item-input {
  border: none;
  border-bottom: 3px black solid;
  outline: none;
  background-color: transparent;
  font-size: large;
  padding-bottom: 5px;
}

.item-input:hover {
  border-bottom: 3px solid lawngreen;
}
.item-content {
  display: inline;
}
.item-button {
  font-size: 20pt;
  float: right;
  height: 20px;
  width: 20px;
  border: none;
  background-color: white;
}

.item-button:hover:before {
  color: rgba(51, 51, 51);
}

.item-content-completed {
  text-decoration: line-through;
}

.item-input {
  border: none;
  border-bottom: 1px black solid;
  outline: none;
  background-color: transparent;
  font-size: large;
}

.item-content {
  display: inline;
}
.item-button {
  float: right;
  height: 10px;
  width: 10px;
  border: none;
  background-color: transparent;
}
.item-button:before {
  content: "\00d7";
  color: #bbb;
  font-weight: 300;
  font-family: Arial, sans-serif;
  font-size: 15pt;
}
.item-button:hover:before {
  color: rgba(51, 51, 51);
}

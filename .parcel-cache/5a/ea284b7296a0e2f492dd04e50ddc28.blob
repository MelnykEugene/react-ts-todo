html,
body {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: "Inter";
  overflow: auto;
  overscroll-behavior: none;
  background-color: white;
}

h1 {
  font-weight: 300;
  margin-left: 3rem;
}

ul {
  margin-left: 20px;
}
li {
  margin: 10px;
}

.overlay {
  pointer-events: none;
  position: fixed;
  height: 100%;
  width: 100%;
  background-color: rgba(153, 125, 125, 0);
  mix-blend-mode: difference;
  -webkit-transition: all 0.3s ease-in-out;
  -o-transition: all 0.3s ease-in-out;
  transition: all 0.3s ease-in-out;
}

.expand {
  width: 100%;
  height: 100%;
  background-color: rgba(220, 220, 220, 1);
  -webkit-transition: all 0.3s ease-in-out;
  -o-transition: all 0.3s ease-in-out;
  transition: all 0.3s ease-in-out;
}

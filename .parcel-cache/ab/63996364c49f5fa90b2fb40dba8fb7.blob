.item-input {
  border: none;
  border-bottom: 3px black solid;
  outline: none;
  background-color: transparent;
  font-size: large;
  padding-bottom: 5px;
}

.item-input:hover {
  border-bottom: 3px solid lawngreen;
}
.item-content {
  display: inline;
}
.item-remove {
  font-size: 20pt;
  float: right;
  height: 20px;
  width: 20px;
  border: none;
  background-color: transparent;
}

.item-remove:hover {
  color: red;
}

.item-content-completed {
  text-decoration: line-through 5px solid;
  color: rgba(47, 47, 47, 0.8);
}
.item-completer {
  font-size: 20pt;
  float: right;
  height: 20px;
  width: 20px;
  border: none;
  background-color: transparent;
  margin-right: 20px;
}
.item-completer:hover {
  color: lime;
}

#list-container {
  margin: 0 auto;
  width: 60%;
  display: flex;
  flex-flow: column nowrap;
  font-size: 15pt;
  font-family: Verdana, Geneva, Tahoma, sans-serif;
  padding-bottom: 30px;
}
.item-container {
  margin-top: 30px;
  padding: 10px 40px 10px 40px;
  border-radius: 20px;
}
.item-container:hover {
  background-color: rgb(240, 240, 240);
}

html,
body {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: "Inter";
  overflow: auto;
  overscroll-behavior: none;
  background-color: white;
}

h1 {
  font-weight: 300;
  display: inline-block;
}

.bottom-button:hover {
  background-color: rgba(255, 255, 255, 1);
  border: 3px solid black;
  color: black;
}
.dark-mode-button {
  float: right;
  margin: 40px;
  margin-right: 60px;
  width: 50px;
  height: 50px;
  border-radius: 100%;
  background-color: black;
  color: white;
}

.workspaces-container {
  top: 20px;
  left: 40px;
  display: flex;
  flex-direction: column;
  max-width: 20%;
}

li {
  padding: 10px;
  margin: 10px;
}

.all-workspace:hover {
  transform: scale(1.1);
  background-color: darkgray;
  transition: all 0.1s ease-in-out;
}

.rest-workspaces:hover {
  transform: scale(1.1);
  background-color: darkgray;
  transition: all 0.1s ease-in-out;
}

.overlay {
  pointer-events: none;
  position: fixed;
  height: 100%;
  width: 100%;
  background-color: rgba(153, 125, 125, 0);
  mix-blend-mode: difference;
  -webkit-transition: all 0.3s ease-in-out;
  -o-transition: all 0.3s ease-in-out;
  transition: all 0.3s ease-in-out;
}

.expand {
  width: 100%;
  height: 100%;
  background-color: rgba(220, 220, 220, 1);
  -webkit-transition: all 0.3s ease-in-out;
  -o-transition: all 0.3s ease-in-out;
  transition: all 0.3s ease-in-out;
}

.footer {
  position: fixed;
  bottom: 10px;
  left: 50%;
  transform: translate(-50%, 0);
  transition: 0.3s color ease-in-out;
}
.footer-dark {
  color: rgba(220, 220, 220, 1);
  transition: 0.3s color ease-in-out;
}


html,
body {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: "Inter";
  overflow: auto;
  overscroll-behavior: none;
  background-color: white;
}

h1 {
  font-weight: 300;
  margin-bottom: none;
}

.bottom-button:hover {
  background-color: rgba(255, 255, 255, 1);
  border: 3px solid black;
  color: black;
}
.dark-mode-button {
  float: right;
  margin: 40px;
  margin-right: 60px;
  width: 50px;
  height: 50px;
  border-radius: 100%;
  background-color: black;
  color: white;
}

.workspaces-container {
  position: fixed;
  top: 20px;
  left: 40px;
  display: flex;
  flex-direction: column;
  max-width: 20%;
}

li {
  margin: 10px;
}
.all-workspace,
.rest-workspaces {
  cursor: pointer;
  padding: 20px;
}
.all-workspace:hover,
.rest-workspaces:hover {
  transform: scale(1.1);
  background-color: rgb(47, 47, 47);
  color: white;
  transition: all 0.1s ease-in-out;
}

.overlay {
  pointer-events: none;
  position: fixed;
  height: 100%;
  width: 100%;
  background-color: rgba(153, 125, 125, 0);
  mix-blend-mode: difference;
  -webkit-transition: all 0.3s ease-in-out;
  -o-transition: all 0.3s ease-in-out;
  transition: all 0.3s ease-in-out;
}

.expand {
  width: 100%;
  height: 100%;
  background-color: rgba(220, 220, 220, 1);
  -webkit-transition: all 0.3s ease-in-out;
  -o-transition: all 0.3s ease-in-out;
  transition: all 0.3s ease-in-out;
}

.footer {
  position: fixed;
  bottom: 10px;
  left: 50%;
  transform: translate(-50%, 0);
  transition: 0.3s color ease-in-out;
}
.absolute-text-dark {
  color: rgba(220, 220, 220, 1);
  transition: 0.3s color ease-in-out;
}

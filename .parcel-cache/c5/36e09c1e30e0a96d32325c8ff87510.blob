#list-container {
  display: inline-flex;
  min-width: 50%;
  flex-flow: column nowrap;
  font-size: 15pt;
  font-family: Verdana, Geneva, Tahoma, sans-serif;
  padding-bottom: 30px;
}
.item-container {
  margin-top: 30px;
  padding: 20px 40px 10px 40px;
  padding-bottom: 20px;
  border-radius: 20px;
}
.item-container:hover {
  background-color: rgb(240, 240, 240);
}
